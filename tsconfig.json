{
  "compilerOptions": {
    "target": "esnext",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "src",
    "paths": {
      "common/*": ["common/*"],
      "contexts/*": ["contexts/*"],
      "themes/*": ["themes/*"],
      "pages/*": ["pages/*"]
    }
  },
  "include": ["src/**/*", "./jest-setup.ts"],
  "exclude": ["node_modules"]
}
