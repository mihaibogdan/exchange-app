{
  "compilerOptions": {
    "target": "esnext",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "src",
    "paths": {
      "constants/*": ["common/constants/*"],
      "utils/*": ["common/utils/*"],
      "styles/*": ["common/styles/*"],
      "typings/*": ["common/typings/*"],
      "context/*": ["context/*"],
      "themes/*": ["themes/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
